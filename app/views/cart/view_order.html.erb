<h2>My Cart</h2>

<div>
  <ul class="list-group">

  <% @line_items.each do |line_item| %>
  <li class="list-group-item">
    <p><%= line_item.product.name %></p>
    <p><%= number_to_currency line_item.product.price %></p>
    <p>Qty: <%= line_item.quantity %></p>
    <p>Subtotal: <%= number_to_currency line_item.line_item_total %></p>
  </li>
  <% end %>
</ul>
</div>

<div>
  <%= link_to "Proceed to Checkout?", checkout_path, class: "btn btn-default" %>
</div>
