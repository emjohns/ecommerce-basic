<div class="col-lg-10 col-lg-offset-1">
<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-4 col-s-4 col-md-4 col-lg-4">
      <div class="thumbnail text-center">
        <% if product.image.url.nil? == false %>
          <p><%=link_to image_tag(product.image.url, class:"img-responsive"), product, id:"imglink", class: "img-responsive center-block" %></p>
        <% end %>
        <div class="caption">
        <h3 id="product-name"><%= link_to product.name, product %></h3>
        <h5><%= product.brand %></h5>
        <p><%= number_to_currency product.price %></p>
        <p>
          <a href="#" data-toggle="modal" data-target="#myModal_<%= product.id %>">
            <span class="glyphicon glyphicon-plus"></span> Quick View
          </a>
        </p>

        <div class="modal fade " id="myModal_<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
              </div>
              <div class="modal-body text-center">
                <% if product.image.url.nil? == false %>
                  <p><%= image_tag product.image.url, class: "center-block", height: "300px" %></p>
                <% end %>
                <h3><%= link_to product.name, product %></h3>
                <p><%= number_to_currency product.price %></p>
                <p><%= product.brand %></p>
              </div>
              <div class="modal-footer">
                <p>
                  <%= form_tag add_to_cart_path do %>
                  <%= hidden_field_tag :product_id, product.id %>
                  <%= number_field_tag :quantity, nil, placeholder: "How many?" %>
                  <%= submit_tag "Add to Cart", class: "btn btn-primary" %>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        </div>


      </div>
      </div>
    </div>
  <% end %>
</div>
</div>
